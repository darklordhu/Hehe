    <div id="step5" class="step-card">
        <span class="text-5xl block mb-4">üíñ</span>
        <h1 class="gradient-text">With All My Heart</h1>
        <p class="text-pink-100/70">I just wanted you to know how much you mean to me.</p>
        <div id="final-message" class="mt-8 opacity-0 text-xl font-bold text-white italic"></div>
        <button id="celebrate-btn" class="btn-love" onclick="celebrate()">Send My Love</button>
        <div id="signature">BY DARK</div>
    </div>

    <script>
        let currentStep = 1;
        const totalSteps = 5;

        // Three.js Setup
        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(75, window.innerWidth/window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        document.getElementById('canvas-container').appendChild(renderer.domElement);

        const heartShape = new THREE.Shape();
        heartShape.moveTo(25, 25); heartShape.bezierCurveTo(25, 25, 20, 0, 0, 0); heartShape.bezierCurveTo(-30, 0, -30, 35, -30, 35);
        heartShape.bezierCurveTo(-30, 55, -10, 77, 25, 95); heartShape.bezierCurveTo(60, 77, 80, 55, 80, 35);
        heartShape.bezierCurveTo(80, 35, 80, 0, 50, 0); heartShape.bezierCurveTo(35, 0, 25, 25, 25, 25);

        const geometry = new THREE.ExtrudeGeometry(heartShape, { depth: 4, bevelEnabled: true, bevelSize: 2, bevelThickness: 2 });
        geometry.scale(0.012, 0.012, 0.012); geometry.rotateZ(Math.PI);

        const hearts = [];
        for(let i=0; i<20; i++) {
            const mat = new THREE.MeshPhongMaterial({ color: i%2==0?0xf472b6:0xdb2777, shininess: 80, transparent: true, opacity: 0.6 });
            const h = new THREE.Mesh(geometry, mat);
            h.position.set((Math.random()-0.5)*12, (Math.random()-0.5)*12, (Math.random()-0.5)*8);
            h.rotation.set(Math.random()*Math.PI, Math.random()*Math.PI, 0);
            scene.add(h); hearts.push(h);
        }

        scene.add(new THREE.PointLight(0xffffff, 1).clone().set(5,5,5));
        scene.add(new THREE.AmbientLight(0xffffff, 0.4));
        camera.position.z = 6;

        function animate() {
            requestAnimationFrame(animate);
            hearts.forEach((h, i) => { h.rotation.y += 0.01; h.position.y += Math.sin(Date.now()*0.001+i)*0.002; });
            renderer.render(scene, camera);
        }
        animate();

        function nextStep(step) {
            gsap.to(`#step${currentStep}`, { opacity: 0, y: -40, duration: 0.6, onComplete: () => {
                document.getElementById(`step${currentStep}`).classList.remove('active');
                document.getElementById(`step${step}`).classList.add('active');
                gsap.fromTo(`#step${step}`, { opacity: 0, y: 40 }, { opacity: 1, y: 0, duration: 0.8 });
                currentStep = step;
                document.getElementById('progress-bar').style.width = `${(step/totalSteps)*100}%`;
            }});
        }

        function celebrate() {
            const btn = document.getElementById('celebrate-btn');
            btn.style.pointerEvents = 'none';
            gsap.to(btn, { opacity: 0, duration: 0.5 });
            
            const final = document.getElementById('final-message');
            final.innerText = "You are my favorite person. Forever. ‚ù§Ô∏è";
            gsap.to(final, { opacity: 1, y: -20, duration: 1.5 });
            
            // Reveal Signature
            gsap.to("#signature", { opacity: 1, duration: 2, delay: 1.5 });

            const end = Date.now() + 4000;
            (function frame() {
                confetti({ particleCount: 2, angle: 60, spread: 55, origin: { x: 0 }, colors: ['#f472b6', '#ffffff'] });
                confetti({ particleCount: 2, angle: 120, spread: 55, origin: { x: 1 }, colors: ['#f472b6', '#ffffff'] });
                if (Date.now() < end) requestAnimationFrame(frame);
            }());

            hearts.forEach((h, i) => gsap.to(h.position, { y: 20, duration: 5, delay: i*0.1 }));
        }

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth/window.innerHeight; camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
